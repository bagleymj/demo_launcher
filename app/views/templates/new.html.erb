<div class="row">
  <%= form_for @template do |f| %>
    <div class="col-md-4">
      <%= f.label :template_name %>
      <%= f.text_field :template_name, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :template_url %>
      <%= f.text_field :template_url, class: "form-control" %>
    </div>
    <div class="col-md-2">
      &nbsp;<br />
      <%= f.submit "Create Template", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

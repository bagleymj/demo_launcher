<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <tr>
        <th>
          Template Name
        </th>
        <th>
          Template URL
        </th>
        <th>
          Actions
        </th>
      </tr>
      <% @templates.each do |template| %>
        <tr>
          <td>
            <%= template.template_name %>
          </td>
          <td>
            <%= template.template_url %>
          </td>
          <td>
            <%= link_to "Delete", template_path(template.id), method: "DELETE",
                        data: {confirm: "Really delete #{template.template_name}?"} %>
          </td>
        </tr>
      <% end %>

    </table>
    <%= link_to "Add a new template", new_template_path %>
  </div>
</div>
